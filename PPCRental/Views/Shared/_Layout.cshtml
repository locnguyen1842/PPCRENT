<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/index.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/carousel.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
          @Styles.Render("~/Content/css")
          @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />

</head>
<body style="padding-top:0rem;margin-top:0px">
        <header>
            <div>
                
                <img src="~/Images/PPCRentalLogo.png" style="height:100px;width:200px"/>
                <nav>
                    
                    <ul>

                        
                    </ul>
                    @if (Session["UserName"] != null)
                    {
                        <a> Welcome @Session["UserName"].ToString()</a>
                    }
                    else
                    {
                        <a href="~/Project/Login" class="login_btn">Login</a>
                    }
                </nav>
            </div>
        </header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <a class="navbar-brand" href="/Home/Index">PPC Rental</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                
                <li class="nav-item">
                    <a class="nav-link" href="/Project/Index">Listings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Project/Create">Post</a>
                </li>
                
                
            </ul>
            
        </div>
    </nav>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PPC Rental </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    
</body>
</html>
